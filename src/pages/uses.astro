<style>
  .uses-page {
    padding: 2rem 0;
    max-width: 100%;
  }

  h1 {
    font-size: 2rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .intro {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 3rem;
  }

  .uses-section {
    margin-bottom: 3rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .section-icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  .section-header h2 {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    margin: 0;
    color: var(--text-primary);
  }

  .uses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .use-item {
    padding: 1.25rem;
    background-color: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    transition: all 0.2s ease-out;
  }

  .use-item:hover {
    background-color: var(--selection);
    border-color: var(--text-tertiary);
    transform: translateY(-2px);
  }

  .use-item h3 {
    font-size: 1rem;
    font-weight: var(--font-weight-bold);
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }

  .use-item p {
    font-size: var(--font-size-m);
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
  }

  .uses-note {
    margin-top: 3rem;
    padding: 1.5rem;
    background-color: var(--code-bg);
    border-left: 3px solid var(--text-tertiary);
    border-radius: 0.25rem;
  }

  .uses-note p {
    margin: 0;
    line-height: 1.7;
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .uses-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
