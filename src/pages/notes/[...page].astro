---
// ABOUTME: Notes (TIL) listing page with pagination.

import type { GetStaticPaths } from 'astro'
import type { CollectionEntry } from 'astro:content'

import NotesList from '@/components/notes/NotesList'
import Pagination from '@/components/ui/Pagination.astro'
import { themeConfig } from '@/config'
import IndexLayout from '@/layouts/IndexLayout.astro'
import { formatContentDate } from '@/utils/date'
import { getSortedFilteredNotes, getUniqueNotesCategories } from '@/utils/notes'

export const getStaticPaths = (async ({ paginate }) => {
  const sortedNotes = await getSortedFilteredNotes()
  const categories = getUniqueNotesCategories(sortedNotes)

  return paginate(sortedNotes, {
    pageSize: themeConfig.pagination.til,
    props: { categories }
  })
}) satisfies GetStaticPaths

interface Props {
  categories: string[]
  page: {
    currentPage: number
    data: CollectionEntry<'notes'>[]
    lastPage: number
    url: { next?: string; prev?: string }
  }
}

const { categories, page } = Astro.props
const sortedNotes = page.data

const serializedNotes = sortedNotes.map((note) => ({
  category: note.data.category,
  excerpt: note.data.excerpt,
  id: note.id,
  pubDate: note.data.pubDate.toISOString(),
  title: note.data.title
}))
---

<IndexLayout
  description="TILs (Today I Learned) and quick technical snippets"
  title={`Notes - ${themeConfig.site.title}`}
>
  <div class="py-8">
    <div class="mb-8">
      <h1 class="mb-2 text-3xl font-bold">Notes</h1>
      <p class="text-muted">TILs (Today I Learned) and quick technical snippets.</p>
    </div>

    <NotesList categories={categories} client:load notes={serializedNotes} />

    {/* No-JS fallback â€” hidden once React hydrates */}
    <noscript>
      <ul class="my-5 flex list-none flex-col gap-0.5 p-0">
        {
          sortedNotes.map((note) => (
            <li class="group list-none">
              <a
                href={`/notes/${note.id}`}
                title={note.data.title}
                class="-mx-2 flex items-center justify-between gap-6 rounded-sm px-2 py-1 no-underline transition-colors hover:bg-(--selection) focus-visible:bg-(--selection)"
              >
                <div class="flex min-w-0 items-center gap-2">
                  <span>{note.data.title}</span>
                  <span class="tag cursor-default!">{note.data.category}</span>
                </div>
                <span class="shrink-0 text-sm whitespace-nowrap text-muted">
                  <time datetime={note.data.pubDate.toISOString()}>
                    {formatContentDate(note.data.pubDate)}
                  </time>
                </span>
              </a>
            </li>
          ))
        }
      </ul>
    </noscript>

    <div id="notes-pagination">
      <Pagination
        currentPage={page.currentPage}
        lastPage={page.lastPage}
        nextUrl={page.url.next}
        prevUrl={page.url.prev}
      />
    </div>
  </div>
</IndexLayout>
