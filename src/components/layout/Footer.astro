---
import { themeConfig } from '@/config'

const today = new Date()

const navLinks = [
  { label: 'Colophon', href: '/colophon' },
  { label: 'Uses', href: '/uses' },
  { label: 'RSS', href: '/rss.xml' }
]
---

<footer class="mt-8 py-8 border-t border-(--border)">
  <div
    class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 sm:gap-0 font-medium"
  >
    <div class="text-(--text-secondary) text-[length:var(--font-size-m)]">
      &copy; {today.getFullYear()}
      {themeConfig.site.author}
    </div>

    <div class="flex items-center gap-2 text-[length:var(--font-size-m)]">
      {
        navLinks.map((link, index) => (
          <>
            {index > 0 && <span class="text-(--text-tertiary)" aria-hidden="true">Â·</span>}
            <a
              href={link.href}
              class="text-(--text-secondary) hover:text-(--text-primary) transition-colors"
            >
              {link.label}
            </a>
          </>
        ))
      }
    </div>
  </div>
</footer>
