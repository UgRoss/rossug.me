---
import { themeConfig } from '@/config'

const today = new Date()

const navLinks = [
  { href: '/colophon', label: 'Colophon' },
  { href: '/uses', label: 'Uses' },
  { href: '/rss.xml', label: 'RSS' }
]
---

<footer class="mt-8 py-8 border-t border-(--border)">
  <div
    class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 font-medium"
  >
    <div class="text-(--text-secondary) text-[length:var(--font-size-m)]">
      &copy; {today.getFullYear()}
      {themeConfig.site.author}
    </div>

    <div class="flex items-center gap-2 text-[length:var(--font-size-m)]">
      {
        navLinks.map((link, index) => (
          <>
            {index > 0 && (
              <span aria-hidden="true" class="text-(--text-tertiary)">
                Â·
              </span>
            )}
            <a
              class="text-(--text-secondary) hover:text-(--text-primary) transition-colors"
              href={link.href}
            >
              {link.label}
            </a>
          </>
        ))
      }
    </div>
  </div>
</footer>
