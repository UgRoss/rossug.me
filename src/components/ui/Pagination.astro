---
interface Props {
  currentPage: number
  lastPage: number
  nextUrl?: string
  prevUrl?: string
}

const { currentPage, lastPage, nextUrl, prevUrl } = Astro.props
---

{
  lastPage > 1 && (
    <div class="mt-12 flex items-center justify-between pt-8 text-sm">
      <a
        href={prevUrl}
        class:list={[
          'text-neutral-500 transition-colors hover:text-neutral-900 dark:hover:text-neutral-100',
          { 'pointer-events-none invisible': !prevUrl }
        ]}
      >
        &larr; Prev
      </a>

      <span class="text-neutral-400">
        {currentPage} / {lastPage}
      </span>

      <a
        href={nextUrl}
        class:list={[
          'text-neutral-500 transition-colors hover:text-neutral-900 dark:hover:text-neutral-100',
          { 'pointer-events-none invisible': !nextUrl }
        ]}
      >
        Next &rarr;
      </a>
    </div>
  )
}
