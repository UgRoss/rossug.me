---
interface Props {
  icon: string
  size?: number | string
  class?: string
}

const { icon, size = 24, class: className } = Astro.props

// Clean up the SVG content for inlining
const innerSVG = icon
  .replace(/<svg[^>]*>/, '') // Remove opening svg tag
  .replace(/<\/svg>/, '') // Remove closing svg tag
  .replace(/stroke="[^"]*"/g, 'stroke="currentColor"') // Force currentColor
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  set:html={innerSVG}
/>
