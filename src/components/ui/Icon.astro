---
interface Props {
  class?: string
  icon: string
  size?: number | string
}

const { class: className, icon, size = 24 } = Astro.props

// Clean up the SVG content for inlining
const innerSVG = icon
  .replace(/<svg[^>]*>/, '') // Remove opening svg tag
  .replace(/<\/svg>/, '') // Remove closing svg tag
  .replace(/stroke="[^"]*"/g, 'stroke="currentColor"') // Force currentColor
---

<svg
  class={className}
  fill="none"
  height={size}
  set:html={innerSVG}
  stroke="currentColor"
  stroke-linecap="round"
  stroke-linejoin="round"
  stroke-width="2"
  viewBox="0 0 24 24"
  width={size}
  xmlns="http://www.w3.org/2000/svg"
/>
